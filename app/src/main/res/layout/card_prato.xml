<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size5dp"
    app:cardCornerRadius="@dimen/size16dp"
    tools:showIn="@layout/activity_restaurante_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImagemCardPratoRestaurante"
            android:layout_width="match_parent"
            android:layout_height="50pt"
            android:scaleType="centerCrop"
            android:src="@drawable/iv_aoyama" />

        <TextView
            android:id="@+id/tvNomePratoCardRestaurante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size5dp"
            android:lines="2"
            android:text="Salada com molho Gengibre"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray2"
            android:textSize="18sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>